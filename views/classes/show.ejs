<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div id="classCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% cl.images.forEach((img, i)=> { %>
                        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                            <img src="<%= img.url%>" class="d-block w-100" alt="">
                        </div>
                        <% }) %>
                </div>
                <% if(cl.images.length> 1) {%>
                    <a class="carousel-control-prev" href="#classCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#classCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <% } %>
            </div>
            <div class="card mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=cl.title %>
                    </h5>
                    <p class="card-text text-muted">
                        <%= cl.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= cl.startTime %> to <%= cl.endTime %>
                    </li>
                    <li class="list-group-item">
                        <%= cl.classDays %>
                    </li>
                    <li class="list-group-item">
                        <%= cl.classType %>
                    </li>
                </ul>
                <% if(currentUser) {%>
                    <div class="card-body">
                        <form action="/classes/<%=cl._id %>/edit" class='d-inline' method=GET>
                            <button class='btn btn-primary'>Edit</button>
                        </form>
                        <form class='d-inline' action="/classes/<%=cl._id %>?_method=DELETE" method=POST>
                            <button class='btn btn-danger'>Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>
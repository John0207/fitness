<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Class</h1>
        <div class="col-6 offset-3">
            <form action="/classes" method="POST" novalidate class='validated-form' enctype="multipart/form-data">
                <div class='mb-3'>
                    <label class="form-label" for="title">Title</label>
                    <input class='form-control' type="text" id='title' name="cl[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="form-label" for="description">Description</label>
                    <input class='form-control' type="text" id='description' name="cl[description]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="form-label" for="startTime">Start Time:</label>
                    <input class='form-control' type="text" id='startTime' name="cl[startTime]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="form-label" for="endTime">End Time:</label>
                    <input class='form-control' type="text" id='endTime' name="cl[endTime]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="form-label" for="classDays">Class Days:</label>
                    <input class='form-control' type="text" id='classDays' name="cl[classDays]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="form-label" for="classType">Age Group:</label>
                    <input class='form-control' type="text" id='classType' name="cl[classType]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id='images' name='images' multiple required>
                        <label for="images" class="form-file-label">
                            <span class="form-file-text custom-file-label">Choose Image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <button class='btn-success'>Add Class</button>
            </form>
        </div>
        <a href="/classes">All Classes</a>
    </div>
    </div>